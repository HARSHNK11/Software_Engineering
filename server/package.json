{
    "name": "plante-tree-server",
    "version": "1.0.0",
    "description": "Plant-E-Tree backend API (Express + JWT + MongoDB)",
    "main": "src/server.js",
    "type": "module",
    "scripts": {
        "dev": "node --watch src/server.js",
        "start": "node src/server.js",
        "start:prod": "NODE_ENV=production node src/server.js",
