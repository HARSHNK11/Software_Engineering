    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-validator": "^7.2.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.6.2",
        "morgan": "^1.10.0",
        "razorpay": "^2.9.2",
        "winston": "^3.18.3",
        "ws": "^8.18.0"
    }
}
